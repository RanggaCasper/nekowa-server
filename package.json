{
  "name": "nekowa-server",
  "version": "1.0.0",
  "description": "Advanced WhatsApp Gateway Bot with AI Integration, Smart Content Filtering, and Media Processing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --inspect"
  },
  "keywords": [
    "whatsapp",
    "gateway",
    "baileys",
    "multi-device",
    "api",
    "bot",
    "ai",
    "gemini",
    "content-filter",
    "media-processing",
    "automation",
    "chatbot",
    "nodejs",
    "javascript"
  ],
  "author": {
    "name": "RanggaCasper",
    "email": "hyfanutama@gmail.com",
    "url": "https://github.com/nekowa-server"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nekowa-server.git"
  },
  "bugs": {
    "url": "https://github.com/nekowa-server/issues"
  },
  "homepage": "https://github.com/nekowa-server#readme",
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "@google/generative-ai": "^0.24.1",
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.11.0",
    "canvas": "^3.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.0",
    "instagram-url-direct": "^2.0.7",
    "jimp": "^0.16.13",
    "moment": "^2.30.1",
    "pino": "^8.21.0",
    "pino-pretty": "^11.2.2",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "preferGlobal": false,
  "private": false,
  "config": {
    "port": 3000,
    "session_path": "./sessions",
    "temp_path": "./temp",
    "log_path": "./logs"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!temp/**",
      "!sessions/**",
      "!logs/**"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "sessions/*",
      "temp/*",
      "logs/*",
      "node_modules/*"
    ],
    "ext": "js,json",
    "delay": 2000
  }
}
